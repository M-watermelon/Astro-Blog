---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
		<button type="button" class = "center" onclick={`window.location='${href}'`}> Read More</button>

	
</li>
<style>
	.link-card {
		list-style: none;
		border-radius: 7px;
    	/*box-shadow: 2px 2px 10px rgb(3, 3, 3);*/
    	max-width:400px;
		margin:40px;
		margin-left: 0px;
		padding-left: 0px;
    	padding: 20px;
		background-position: 100%;
	}
	
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: inherit;
		opacity: 0.8;
	}


	h2 {
		text-decoration: none;
		margin-left: 0px;
		margin-bottom: 30px;
	}
	p {
		font-size:20px;
		font-weight: 100px;
		margin-bottom: 0;
	}
	button{
		opacity: 0.8;
		margin: 10px;

	}

</style>
