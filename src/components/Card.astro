---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
		<button  type="button" class = "center" onclick={`window.location='${href}'`}> Read More</button>

	
</li>
<style>
	.link-card {
		list-style: none;
		border-radius: 1rem;
		/*background-color: rgba(255, 255, 255, 0.24);
		 */
		box-shadow: inset rgba(0, 0, 0, 0.39) 5px 5px 5px 5px;
		width:auto;
		margin:40px;
		margin-left: 20px;
		padding-left: 0px;
    	padding: 20px;
	}
	
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(2.5rem - 10px);
		border-radius: 8px;
		color: inherit;
	}


	h2 {
		text-decoration: none;
		margin-left: 0px;
		margin-bottom: 30px;
	}
	p {
		font-size:20px;
		font-weight: 100px;
		margin-bottom: 0;
	}
	button{
		opacity: 0.8;
		margin: 10px;

	}

</style>
