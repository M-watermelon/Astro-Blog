---
interface Props {
	title: string;
	date: string;
	body: string;
	href: string;
}

const { href, title, date, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span style="color: var(--purple);">&rarr;</span>
		</h2>
		<h4>
			{date}
		</h4>
		<p>
			{body}
		</p>
	</a>
	
</li>
<style>
	.link-card {
		list-style: none;
		border-radius: 1rem;
		/*background-color: rgba(255, 255, 255, 0.24);
		 */
		box-shadow: inset rgba(0, 0, 0, 0.39) 5px 5px 5px 5px;
		width:auto;
		margin:40px;
		margin-left: 20px;
		padding-left: 0px;
    	padding: 20px;
	}
	
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(2.5rem - 10px);
		border-radius: 8px;
		transition: 0.3s;
	}


	h2 {
		text-decoration: none;
		margin-left: 0px;
		margin-bottom: 30px;
	}
	h4 {
		text-decoration: none;
		font-size: 12px;
		color:var(--purple);
		margin-left: 0px;
		margin-bottom: 30px;
	}
	p {
		font-size:20px;
		font-weight: 100px;
		margin-bottom: 0;
	}

</style>
