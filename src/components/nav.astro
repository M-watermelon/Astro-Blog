---
import house from "../icons/house.svg"
import envelope from "../icons/envelope.svg"
import person from "../icons/person-circle.svg"
import archive from "../icons/archive.svg"
import bio from "../icons/capsule-pill.svg"
import github from "../icons/github.svg"

const {title} = Astro.props;
const {desc} = Astro.props;
---

<header>


<nav>
    <div class="center">
    <button type="button" style="left-right: 0px; padding-left: 0px;" onclick="window.location='/Astro-Blog/'"><img class ="icon" src={house.src}> Home</button>
    <button type="button" onclick="window.location='/Astro-Blog/about'"><img class ="icon" src={person.src}> About</button>
    <button type="button" onclick="window.location='/Astro-Blog/archive'"><img class ="icon" src={archive.src}>Archive</button>
    <button type="button" onclick="window.location='/Astro-Blog/bio'"><img class ="icon" src={bio.src}>Biology</button>
    <button type="button" style="margin-right: 0px; padding-right: 0px;" onclick="window.location='/Astro-Blog/landing'"><img class ="icon" src={envelope.src}>Social</button>
    
</div>
</nav>
<p class="header-text">{title}</p>
<hr class="center">
<p>{desc} <br> <button type="button" style="filter: brightness(0) saturate(100%) invert(90%) sepia(9%) saturate(2606%) hue-rotate(300deg) brightness(117%) contrast(118%);" onclick="window.location='https://github.com/M-watermelon'"><img class="icon" style="height: 30px;" src={github.src} alt="Github"></button>
</p>
</header>

<style>
    button{
    width:150px;
    font-size: 15px;
    display: inline;
    margin-top: 10px;
    transition:0.3s;  
    color:var(--roseWhite);
  }
  
    button:hover{
    background-color: transparent;

  }
  hr{
    background: rgba(148,187,233,1) ; 
    width: 30%;
  }
  .icon{
    filter: brightness(0) saturate(100%) invert(38%) sepia(8%) saturate(366%) hue-rotate(214deg) brightness(90%) contrast(89%);
    height:16px;
    padding-right: 10px;
  }
  button:hover > .icon{
    filter: brightness(0) saturate(100%) invert(90%) sepia(9%) saturate(2606%) hue-rotate(300deg) brightness(117%) contrast(118%);
}
</style>