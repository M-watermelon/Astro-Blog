---
import { Image } from 'astro:assets';
import house from "../icons/house.svg"
import envelope from "../icons/envelope.svg"
import person from "../icons/person-circle.svg"
import archive from "../icons/archive.svg"
import bio from "../icons/capsule-pill.svg"
import github from "../icons/github.svg"
const {title} = Astro.props;
const {desc} = Astro.props;
---
<nav>
  <div class="center">
    <a href='/Astro-Blog/'><Image class ="icon" src={house} alt="home"/> Home</a>
    <a href='/Astro-Blog/about'><Image class ="icon" src={person} alt="person-icon"/> About</a>
    <a href='/Astro-Blog/archive'><Image class ="icon" src={archive} alt="file-icon"/>Archive</a>
    <a href='/Astro-Blog/bio'><Image class ="icon" src={bio} alt="science-icon"/>Biology</a>
    <a href='/Astro-Blog/landing'><Image class ="icon" src={envelope} alt="mail-icon"/>Social</a>
    
</div>
</nav>
<header>



<p class="header-text">{title}</p>
<hr class="center">
<p>{desc} <br> <button type="button" style="filter: brightness(0) saturate(100%) invert(90%) sepia(9%) saturate(2606%) hue-rotate(300deg) brightness(117%) contrast(118%);" onclick="window.location='https://github.com/M-watermelon'"><img src={github.src} style=" height:30px;" alt="Github"/></button>
</p>
</header>

<style>
  nav{
    padding: 10px;
    height: fit-content;
    background-color: var(--shadow);
  }
    a{
    margin-left:70px;
    font-size: 15px;
    display: inline;
    margin-top: 10px;
    transition:0.3s;  
    color:var(--purple);

  }
  
    a:hover{
    background-color: transparent;

  }
  hr{
    background: rgba(148,187,233,1) ; 
    width: 30%;
  }
  .icon{
    filter: brightness(0) saturate(100%) invert(38%) sepia(8%) saturate(366%) hue-rotate(214deg) brightness(90%) contrast(89%);
    height:16px;
    padding-right: 10px;
  }
  a:hover > .icon{
    filter: brightness(0) saturate(100%) invert(90%) sepia(9%) saturate(2606%) hue-rotate(300deg) brightness(117%) contrast(118%);
}

</style>