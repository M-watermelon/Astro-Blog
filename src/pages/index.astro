---
import type { MarkdownLayoutProps } from 'astro';
import Right from '../components/right.astro';
import Layout from '../layouts/page.astro';
import Card from '../components/Card.astro';
const posts = await Astro.glob('../pages/posts/*.md');
type Props = MarkdownLayoutProps<{
  title: string;
  date: string;
}>;

const { frontmatter, url } = Astro.props;

---

<Layout title="Home - My Blog" bantitle="Astro blog, by m-watermelon" bandesc="My personal website, updated somewhat often. ">
	<h1 >Posts</h1>
	<section style="margin-top: 0px;">
	

	<Card href="posts/first-post/", title="First Post!", body="My first post on this site, about how it came to exist." />
<Right title="All Posts">
	{posts.map(post => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
</Right>
	</section>
	  <section class="block">
		<hr>
		<p style="margin-bottom: 30px;">Check out my old blog site since I'm not done with this one!</p>
		<button type="button" style = "width:200px; margin-left: 40px; background:linear-gradient(60deg,var(--tropical-indigo) 0%, var(--dark-purple) 140%);" onclick="window.location='https://m-watermelon.github.io/WatermelonBlog/'">My old blog</button>
  
	</section>
</Layout>
<style>
	header{
		height:30vh;
	}
</style>