---
import type { MarkdownLayoutProps } from 'astro';
import Banner from '../components/banner.astro';
import Nav from '../components/nav.astro';
import Footer from '../components/footer.astro';
import Head from '../components/head.astro';

type Props = MarkdownLayoutProps<{
  // Define frontmatter props here
  title: string;
  date: string;
}>;

// Now, `frontmatter`, `url`, and other Markdown layout properties
// are accessible with type safety
//<link rel="canonical" href={new URL(url, Astro.site).pathname}>
const { frontmatter, url } = Astro.props;
---

<html lang="en">
    <Head title ={frontmatter.title} />
  <body>
    <Banner/>
    <Nav/>
    <main class="center">
    <h1>{frontmatter.title}</h1>
    <p>Updated: {frontmatter.date}</p>
    <slot />
    <button type="button" style = "bottom: 10px; background-color: var(--shadow);" onclick="window.location='/Astro-Blog/'">&larr; Back</button>

    </main>
    <Footer/>
  </body>
</html>

<style>
    @font-face {
    font-family: 'Nunito'; /*a name to be used later*/
    src: url('/public/fonts/Nunito/Nunito-VariableFont_wght.ttf'); /*URL to font*/
  }
    body{
      font-family: Nunito;
    }
  
    main{
        
        min-width: 30%;
        max-width: 40%;
        padding-bottom: 30px;
    }
</style>